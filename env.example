# ============================================
# HomeAssist Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ============================================

# ===========================================
# REQUIRED - Core API Keys
# ===========================================

# OpenAI API Key (for response generation, OpenAI TTS if enabled, and news analysis)
OPENAI_API_KEY=sk-your-openai-key-here

# Google Gemini API Key (for email summarization)
GEMINI_API_KEY=your-gemini-key-here

# AssemblyAI API Key (for speech transcription)
ASSEMBLYAI_API_KEY=your-assemblyai-key-here

# ===========================================
# REQUIRED - Supabase (Database)
# ===========================================

# Supabase Project URL
SUPABASE_URL=https://your-project.supabase.co

# Supabase Service Role Key (not the anon key!)
SUPABASE_KEY=your-supabase-service-role-key

# ===========================================
# OPTIONAL - News API (for news summarizer)
# ===========================================
# Get free keys at https://newsapi.org
# Multiple keys allow rotation when quota exhausted

NEWS_API_KEY_1=your-first-newsapi-key
NEWS_API_KEY_2=your-second-newsapi-key
NEWS_API_KEY_3=your-third-newsapi-key
NEWS_API_KEY_4=your-fourth-newsapi-key
NEWS_API_KEY_5=your-fifth-newsapi-key

# ===========================================
# OPTIONAL - Smart Home & Integrations
# ===========================================

# Spotify (leave empty to disable)
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# Twilio SMS (leave empty to disable)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ===========================================
# OPTIONAL - User Configuration
# ===========================================

# Default notification recipient
EMAIL_NOTIFICATION_RECIPIENT=Morgan
NEWS_NOTIFICATION_RECIPIENT=Morgan

# Gemini model (default: gemini-2.5-flash)
GEMINI_MODEL=gemini-2.5-flash

